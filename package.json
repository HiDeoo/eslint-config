{
  "name": "@hideoo/eslint-config",
  "version": "3.0.1",
  "license": "MIT",
  "description": "HiDeoo's ESLint configuration",
  "author": "HiDeoo <github@hideoo.dev> (https://hideoo.dev)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --dts",
    "preview": "pnpm dlx eslint-flat-config-viewer",
    "lint": "prettier -c --cache . && eslint . --cache --max-warnings=0 && tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "dependencies": {
    "@eslint/js": "8.57.0",
    "astro-eslint-parser": "1.0.2",
    "eslint-config-flat-gitignore": "0.1.8",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-astro": "1.2.3",
    "eslint-plugin-i": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.11",
    "eslint-plugin-unicorn": "55.0.0",
    "globals": "15.9.0",
    "local-pkg": "0.5.0",
    "typescript-eslint": "7.18.0"
  },
  "devDependencies": {
    "@hideoo/prettier-config": "2.0.0",
    "@hideoo/tsconfig": "2.0.1",
    "@types/eslint": "8.56.2",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__js": "8.42.3",
    "@types/node": "18.19.15",
    "eslint": "8.56.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "tsup": "8.0.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0"
  },
  "packageManager": "pnpm@8.10.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "eslint",
    "config",
    "eslint-config",
    "javascript",
    "typescript",
    "astro",
    "react"
  ],
  "homepage": "https://github.com/HiDeoo/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/eslint-config.git"
  },
  "bugs": "https://github.com/HiDeoo/eslint-config/issues",
  "prettier": "@hideoo/prettier-config",
  "lint-staged": {
    "*": [
      "prettier -w -u --cache",
      "eslint --cache --no-warn-ignored --max-warnings=0"
    ]
  }
}
