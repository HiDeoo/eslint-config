{
  "name": "@hideoo/eslint-config",
  "version": "2.0.2",
  "license": "MIT",
  "description": "HiDeoo's ESLint configuration",
  "author": "HiDeoo <github@hideoo.dev> (https://hideoo.dev)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --dts",
    "lint": "prettier -c --cache . && eslint . --cache --max-warnings=0",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@hideoo/prettier-config": "2.0.0",
    "@hideoo/tsconfig": "2.0.1",
    "eslint": "8.56.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "tsup": "8.0.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0"
  },
  "packageManager": "pnpm@8.10.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "eslint",
    "config",
    "eslint-config",
    "base",
    "react",
    "astro",
    "typescript"
  ],
  "homepage": "https://github.com/HiDeoo/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/eslint-config.git"
  },
  "bugs": "https://github.com/HiDeoo/eslint-config/issues",
  "prettier": "@hideoo/prettier-config",
  "lint-staged": {
    "**/*": "prettier -w -u --cache",
    "**/*.js": "eslint --cache --max-warnings=0"
  }
}
